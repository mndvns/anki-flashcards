{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2023"],
    "module": "esnext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
